# Cloud Run Deployment Configuration
# Copy this file to .env or set these environment variables

# ========================================
# Required Configuration
# ========================================

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=apa-bd

# Google Cloud Storage bucket name
STORAGE_BUCKET=tos-monitor

# AI Provider Configuration
AI_PROVIDER=openrouter
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here
OPENROUTER_MODEL=x-ai/grok-code-fast-1

# Alternative OpenAI Configuration (if using AI_PROVIDER=openai)
# OPENAI_API_KEY=sk-your-openai-api-key-here
# LLM_MODEL=gpt-4-turbo-preview

# ========================================
# Optional Cloud Run Configuration
# ========================================

# Cloud Run region (default: europe-west3)
CLOUD_RUN_REGION=europe-west3

# Cloud Run service name (default: tos-monitor)
SERVICE_NAME=tos-monitor

# Service account name (default: tos-monitor-service)
SERVICE_ACCOUNT=tos-monitor-service

# Resource limits (defaults shown)
MEMORY=512Mi
CPU=0.5
MAX_INSTANCES=2

# Build configuration
USE_CLOUD_BUILD=true

# ========================================
# Additional Environment Variables
# ========================================

# These will be passed to the Cloud Run service
LOG_LEVEL=INFO
DEBUG=false
ENVIRONMENT=production